#!/bin/sh

# set -e

export PATH="node_modules/.bin:node_modules/hubot/node_modules/.bin:$PATH"

if [ -f .env ]; then
  source .env
fi

node_modules/.bin/gulp coffee
node_modules/.bin/tsc

exec node_modules/.bin/coffee --nodejs --debug --nodejs --harmony_destructuring "node_modules/hubot/bin/hubot" --name "fred" "$@"
